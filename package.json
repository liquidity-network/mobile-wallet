{
  "name": "wallet",
  "version": "1.27.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "android:release": "react-native run-android --variant release",
    "e2e:ios": "TS_NODE_TRANSPILE_ONLY=true detox test \"./__e2e__/stories/index.ts\" --configuration ios.sim.debug",
    "e2e:android": "TS_NODE_TRANSPILE_ONLY=true detox test \"./__e2e__/stories/index.ts\" --configuration android.emu.debug",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "release": "ts-node --transpile-only scripts/releaser",
    "unit": "jest __unit__ --setupFiles ./node_modules/react-native-gesture-handler/jestSetup.js ./__unit__/unitInit.ts",
    "ios": "react-native run-ios --simulator='iPhone 6'",
    "pod:install": "cd ios && pod install",
    "lint": "eslint 'firebase/functions/src/**/*.{ts,tsx}' 'src/**/*.{ts,tsx}' '__e2e__/**/*.{ts,tsx}' --fix && tsc",
    "production:android": "cd android && ./gradlew assembleRelease",
    "clean:android": "cd android && ./gradlew clean",
    "postinstall": "patch-package && npx jetify",
    "publish:android:beta": "fastlane android beta",
    "publish:android:production": "fastlane android production",
    "publish:ios": "yarn pod:install && cd .. && fastlane ios tf"
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.6.3",
    "@react-native-community/netinfo": "4.6.1",
    "@react-native-community/slider": "2.0.7",
    "@sentry/react-native": "1.1.0",
    "@tradle/react-native-http": "2.0.1",
    "assert": "2.0.0",
    "bignumber.js": "^9.0.0",
    "bip39": "2.5.0",
    "buffer": "5.4.3",
    "date-fns": "1.30.1",
    "ethereumjs-wallet": "0.6.3",
    "events": "3.0.0",
    "https-browserify": "1.0.0",
    "i18n-js": "3.5.0",
    "immer": "8.0.1",
    "jetifier": "1.6.5",
    "liquidity-invoice-generation": "3.0.0",
    "lodash": "4.17.15",
    "nocust-client": "4.0.0-alpha.7",
    "process": "0.11.10",
    "querystringify": "2.1.1",
    "react": "16.9.0",
    "react-native": "0.61.4",
    "react-native-background-timer": "2.2.0",
    "react-native-camera": "3.13.1",
    "react-native-crypto": "2.2.0",
    "react-native-extra-dimensions-android": "1.2.5",
    "react-native-firebase": "5.5.6",
    "react-native-gesture-handler": "1.5.0",
    "react-native-image-picker": "2.3.1",
    "react-native-iphone-x-helper": "1.2.1",
    "react-native-keyboard-aware-scroll-view": "0.9.1",
    "react-native-keychain": "3.1.3",
    "react-native-loading-spinner-overlay": "1.1.0",
    "react-native-modal": "11.5.4",
    "react-native-os": "1.2.5",
    "react-native-permissions": "2.0.10",
    "react-native-qr-scanner": "1.3.2",
    "react-native-randombytes": "3.5.3",
    "react-native-reanimated": "1.4.0",
    "react-native-restart": "0.0.13",
    "react-native-snap-carousel": "3.8.4",
    "react-native-splash-screen": "3.2.0",
    "react-native-touch-id": "4.4.1",
    "react-native-vector-icons": "6.6.0",
    "react-native-webview": "5.12.0",
    "react-navigation": "3.11.1",
    "react-navigation-animated-switch": "0.2.1",
    "react-redux": "5.1.2",
    "redux": "4.0.4",
    "redux-persist": "5.10.0",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0",
    "semver": "6.3.0",
    "stream-browserify": "2.0.2",
    "url": "0.11.0",
    "uuid": "3.3.3",
    "vm-browserify": "1.1.2",
    "web3": "1.2.6",
    "web3-utils": "1.2.6",
    "yaqrcode": "0.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/runtime": "7.6.3",
    "@types/detox": "14.5.1",
    "@types/i18n-js": "3.0.1",
    "@types/jest": "24.0.23",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.8",
    "@types/react": "16.9.11",
    "@types/react-native": "0.60.22",
    "@types/react-native-vector-icons": "6.4.4",
    "@types/react-redux": "7.1.5",
    "@types/react-test-renderer": "16.9.1",
    "@types/semver": "6.2.0",
    "@types/web3": "1.2.2",
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "3.0.0",
    "detox": "14.8.5",
    "eslint": "6.6.0",
    "eslint-config-liquidity": "0.1.3",
    "eslint-config-prettier": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-detox": "1.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.21.0",
    "eslint-plugin-mocha": "6.2.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-standard": "4.0.1",
    "figlet": "1.2.4",
    "husky": "3.1.0",
    "inquirer": "6.5.2",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "metro-react-native-babel-preset": "0.56.3",
    "mocha": "6.2.2",
    "patch-package": "6.2.0",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.19.1",
    "react-native-testing-library": "1.11.1",
    "react-test-renderer": "16.9.0",
    "reactotron-react-native": "4.0.2",
    "ts-node": "8.5.4",
    "typescript": "3.7.2",
    "xmlhttprequest": "1.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "detox": {
    "runner-config": "./__e2e__/mocha.opts",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/walletmobilenative.app",
        "build": "xcodebuild -workspace ios/wallet.xcworkspace -scheme wallet -configuration Debug -destination 'platform=iOS Simulator,name=iPhone 7' -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "npx jetifier && cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_29"
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "react-native",
    "testMatch": [
      "**/__tests__/**/*.[tj]s?(x)",
      "**/?(*.)(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "\\.snap$"
    ],
    "moduleNameMapper": {
      "^image![a-zA-Z0-9$_-]+$": "GlobalImageStub",
      "^[@./a-zA-Z0-9$_-]+\\.(bmp|gif|jpg|jpeg|png|psd|svg|webp)$": "<rootDir>/__mocks__/fileMock.ts",
      "react-native-camera": "<rootDir>/__mocks__/camera.ts",
      "react-native-firebase": "<rootDir>/__mocks__/react-native-firebase.ts"
    }
  }
}
